<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:i18n="clr-namespace:Amptron.i18n"
             x:Class="Amptron.Views.Onboarding.Onboarding_View3">
    <StackLayout Margin="32,0" Orientation="Vertical">
        <Image
            Margin="0,10,0,10"
            HorizontalOptions="Fill"
            Source="onboarding3"
            VerticalOptions="Fill" />
        <Label
            HorizontalTextAlignment="Center"
            Style="{StaticResource PoppinsSemiBoldDimGray16}"
            Text="{i18n:Translate DummyTextTitle}" />
        <Label
            Margin="0,10,0,0"
            HorizontalTextAlignment="Center"
            Style="{StaticResource PoppinsRegularDimGray14}"
            Text="{i18n:Translate DummyTextContent}" />

    </StackLayout>
</ContentView>

